<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="#ff0006"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/zkakat_image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Welcome To Our\n  App"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#373f1a"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_1"
        android:shadowColor="#A8A8A8"
        android:text="Zakat Calculate"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons_1"
        android:shadowColor="#A8A8A8"
        android:text="Tax Calculate"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="25sp"
        android:textStyle="normal"
        android:layout_marginTop="50dp"/>





</LinearLayout>